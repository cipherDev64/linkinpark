rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    // Allow collection wide read for compatibility matching
    match /users {
      allow read: if request.auth != null;
    }
  }
}
